@{
    Layout = null;
}

<div class="modal fade" id="modalPiedra" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header border-0">
                <h5 class="modal-title">Minijuego de Memoria</h5>
                <button type="button" class="btn-close btn-close-white btn-cancelar"></button>
            </div>
            <div class="modal-body text-center">
                <p id="temporizadorPiedra">⏳ 60s</p>
                <p id="instruccionPiedra" class="mb-2">Memoriza la siguiente secuencia:</p>
                <h3 id="secuenciaPiedra">?</h3>
                <p id="preguntaPiedra" class="mt-3"></p>
                <div class="d-flex justify-content-center gap-3 mt-2">
                    <button id="botonSiPiedra" class="btn btn-success" disabled>Sí</button>
                    <button id="botonNoPiedra" class="btn btn-danger" disabled>No</button>
                </div>
                <small id="mensajePiedra" class="mt-2 d-block" style="display:none;"></small>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-secondary btn-cancelar">Cancelar</button>
            </div>
        </div>
    </div>
</div>


