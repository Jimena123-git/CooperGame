@{
    ViewData["Title"] = "Coopera V2 - Minijuegos";
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">

    <nav class="navbar navbar-dark border-bottom border-secondary-subtle" style="background:#0b1220;">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">Coopera</a>
            <span class="badge text-bg-success">V2 (Minijuegos)</span>
            <div class="d-flex align-items-center gap-3">
                <span id="playerNameDisplay">Jugador: <em>Jugador1</em></span>
                <button id="changeNameBtn" class="btn btn-sm btn-outline-light">Cambiar nombre</button>
            </div>
        </div>
    </nav>

    <div class="container text-center mt-4">
        <h2>Recolecta Recursos</h2>
        <div class="d-flex justify-content-center gap-3 mt-3">
            <button class="btn btn-primary" data-recurso="Madera">Madera</button>
            <button class="btn btn-secondary" data-recurso="Piedra">Piedra</button>
            <button class="btn btn-warning" data-recurso="Comida">Comida</button>
        </div>
    </div>

    <!-- Modal Madera -->
    <div id="minijuegoMadera" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Minijuego Madera</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <h3 id="countdownMadera" class="text-warning mb-3">⏳ 60s</h3>
                    <p id="modalPregunta"></p>
                    <input type="text" id="respuestaInput" class="form-control mb-2" placeholder="Escribí tu respuesta">
                    <p id="modalMensaje" class="text-warning mt-2" style="display:none;"></p>
                    <div class="d-flex justify-content-center gap-2">
                        <button id="enviarRespuestaBtn" class="btn btn-primary">Enviar</button>
                        <button id="btnCancelarMadera" class="btn btn-secondary">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Piedra -->
    <div id="minijuegoPiedra" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Minijuego Piedra</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <h3 id="countdownPiedra" class="text-warning mb-3">⏳ 60s</h3>
                    <div id="secuenciaDisplay" class="fs-3 mb-3"></div>
                    <p id="preguntaPiedra" class="fw-bold mb-3"></p>
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button id="btnSi" class="btn btn-success">Sí</button>
                        <button id="btnNo" class="btn btn-danger">No</button>
                    </div>
                    <p id="mensajePiedra" class="mt-2" style="display:none;"></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Comida -->
    <div id="minijuegoComida" class="modal fade" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header">
                    <h5 class="modal-title">Minijuego Comida</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <h3 id="countdownComida" class="text-warning mb-3">⏳ 60s</h3>
                    <p id="proposicionDisplay" class="fw-bold mb-3"></p>
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <button id="btnVerdadero" class="btn btn-success btn-lg">Verdadero</button>
                        <button id="btnFalso" class="btn btn-danger btn-lg">Falso</button>
                        <button id="btnCancelarComida" class="btn btn-secondary btn-lg">Cancelar</button>
                    </div>
                    <p id="mensajeComida" class="mt-2" style="display:none;"></p>
                </div>
            </div>
        </div>

    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/minijuego-madera.js"></script>
    <script src="~/js/minijuego-piedra.js"></script>
    <script src="~/js/minijuego-comida.js"></script>
</body>
</html>
